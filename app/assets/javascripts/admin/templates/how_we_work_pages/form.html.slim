.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          h3 ng-show="$state.current.name == 'edit_how_we_work_page'"
            | {{ I18n.t('how_we_work_page.edit' ) }}
          .pull-right
            a.btn.btn-default type="submit" href="#how_we_work_pages"
              | Cancel
            a.btn.ladda-button.btn-info data-style="expand-left" ladda="formPending" ng-click="save()"
              | Save
        .ibox-content
          .row
            .col-sm-2
              label.control-label
                | {{ I18n.t('how_we_work_page.fields.content') }}:
            .col-sm-10
              div redactor=true required=true ng-model="how_we_work_page.content" file-upload-path="/attachments/how_we_work_page_content"