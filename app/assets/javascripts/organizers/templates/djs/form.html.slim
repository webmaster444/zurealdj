.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          h3 ng-show="$state.current.name == 'new_dj'"
            | {{ I18n.t('dj.new' ) }}
          h3 ng-show="$state.current.name == 'edit_dj'"
            | {{ I18n.t('dj.edit' ) }}
        .ibox-content
          form ng-submit="submitDj()" name="DjForm" novalidate=true
            .form-group
              .row
                .col-sm-2
                  label.control-label
                    | {{ I18n.t('dj.fields.first_name') }}:
                .col-sm-10
                  input.form-control type="text" placeholder="{{ I18n.t('dj.fields.first_name') }}" required=true class="{{ DjForm.first_name.$invalid && submitted ? 'validation-error' : ''}}" name="first_name" ng-model="dj.first_name"
                  .error ng-show="DjsForm.first_name.$invalid && submitted"
                    | {{ I18n.t('validations.cant_be_blank')}}

                  .error ng-repeat="error in validation_errors['first_name']"
                    | {{ error }}

              .hr-line-dashed
            .form-group
              .row
                .col-sm-2
                  label.control-label
                    | {{ I18n.t('dj.fields.last_name') }}:
