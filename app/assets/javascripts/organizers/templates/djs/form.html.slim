                        | Please choose a country
                      span ng-show="djs.country"
                        span.flag class="{{ djs.country.code }}"
                        | {{ djs.country.title }}
                    ul.dropdown-menu aria-labelledby="djs-country-dropdown" role="menu" uib-dropdown-menu=""
                      li ng-repeat="flag in flags"
                        a ng-click="djs.country = flag" style="cursor: pointer"
                          span.flag class="{{ flag.code }}"
                          | {{ flag.title }}
                  .error ng-show="DjsForm.country.$invalid && submitted"
                    | {{ I18n.t('validations.cant_be_blank')}}

