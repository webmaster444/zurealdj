.wrapper.wrapper-content
  .row.animated.fadeInRight
    .col-md-12
      .ibox.float-e-margins
        .ibox-title
          h3
            | {{ I18n.t('headers.cancelations_pages' ) }}
        .ibox-content
          .pull-left
            #cancelations_pages-pagination ng-hide="count < 11"
          .pull-right

            button.btn-xs.btn.btn-info ui-sref="new_cancelations_page"
              | {{ I18n.t('cancelations_page.new') }}

          table.table.table-striped.table-responsive
            thead
              tr
                th
                  | Created At
                th
                  | Actions
            tbody
              tr ng-repeat="cancelations_page in cancelations_pages"
                td
                  | {{ cancelations_page.created_at }}
                td.text-right

                  a.btn-xs.btn.btn-info.btn-outline href="#cancelations_page/{{cancelations_page.id}}"
                    | {{ I18n.t('actions.view') }}

                  a.btn-xs.btn.btn-warning.btn-outline href="#cancelations_page/{{cancelations_page.id}}/edit"
                    | {{ I18n.t('actions.edit') }}


                  a.btn-xs.btn.btn-danger.btn-outline ng-click="destroy(cancelations_page.id)"
                    | {{ I18n.t('actions.delete') }}
