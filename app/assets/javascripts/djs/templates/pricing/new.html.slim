.stripe-form
  form method="POST" name="stripeForm" ng-submit="requestStripeToken($event)"
    .dj-header
      | Buy Subscription
    .row.form-group
      .col-md-2
        | Card Number
      .col-md-10
        input.zureal-input type="text" size="20" maxlength="16" data-stripe="number"
        .error ng-show="validation_errors.card_number"
          | {{ validation_errors.card_number }}
    .row.form-group
      .col-md-2
        | Expiry (MM/YY)
      .col-md-2
        input.zureal-input type="text" size="2"  maxlength="2" data-stripe="exp_month"
        .error ng-show="validation_errors.exp_month"
          | {{ validation_errors.exp_month }}
      .col-md-1.text-center
        h2
          | /
      .col-md-2
        input.zureal-input type="text"  maxlength="2" size="2" data-stripe="exp_year"
        .error ng-show="validation_errors.exp_year"
          | {{ validation_errors.exp_year }}

      .col-md-1.text-center
        | CVC
      .col-md-4
        input.zureal-input type="text" size="4" maxlength="4" data-stripe="cvc"
        .error ng-show="validation_errors.cvc"
          | {{ validation_errors.cvc }}
    hr
      .row.buttons
        .col-md-6.flex
          a.slider-btn.cancel ng-click="closeThisDialog()"
            | Cancel
        .col-md-6.text-right
          button.slider-btn.apply data-style="expand-left" ladda="processing" type="submit"
            | Save