div
  div.login-alert
    a.btn-close href='#' ng-show='isMobile()' ng-click="$parent.ngDialogClose()"
    .text-center#welcome-to-zureal
      .h1-text
        | Welcome to ZUREAL
    .text-center.btn-tab
      a.btn-white.btn-tab.btn-tab-left
        | Sign in
      a.btn-white.btn-tab.btn-tab-right.btn-tab-light ng-click="openRegistrationDialog()"
        | Sign up

    form.m-t role="form" novalidate=true

      .form-group
        input.landing-input placeholder="Email address" required="" type="email" ng-model="session.email"

      .form-group
        input.landing-input placeholder="Password" required="" type="password" ng-model="session.password"
      div ng-show="validation_errors"
        .error ng-repeat="error in validation_errors"
          | {{ error }}
      .hr-line-dashed

      a.btn-submit.ladda-button data-style="expand-left" ladda="processing" type="submit" ng-click="submitLoginCredentials()"
        | Sign in

      .text-center style="margin: 15px auto"
        a.blue ng-click="loginViaFacebook()"
          | Sign in with Facebook

      .hr-line-dashed

      .text-center style="margin: 15px auto"
        a.current-color ng-click="openForgotPasswordDialog()"
          | Forgot password?