html(lang="en")
  head
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  body#page-top.md-skin.fixed-sidebar.fixed-nav.landing-page.gray-bg ng-app="ZurealdjLandingApp" ng-init="flash = { message: '#{ flash[:message] }', error: '#{ flash[:error] }' }"
    javascript:
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '2027913590769007',
          xfbml      : true,
          version    : 'v2.8'
        });
      };

      (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    div ui-view=true
    div toaster-container='' toaster-options="{'close-button': true}"